{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"types": ["@types/node"]
	},
	"exclude": ["node_modules", "out", "scripts"]
}
